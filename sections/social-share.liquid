<div class="text-center {% if section.settings.space_around %}index-section{% endif %}">
{%- render 'social-sharing', share_permalink: section.settings.link -%}
</div>

{% schema %}
  {
    "name": "Social Share",
	"settings": [
      {
        "type": "checkbox",
        "id": "space_around",
        "label": "Add spacing above and below",
        "default": true
      },
	  {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [
        {
          "name": "Social Share"
        }
      ]
  }
{% endschema %}