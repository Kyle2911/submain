{% if section.settings.space_around %}<div class="index-section">{% endif %}
<div class="text-center campaign-tags-container">
  <ul class="campaign-tags__wrapper page-width page-width--narrow">
  {%- for block in section.blocks -%}
    <li class="campaign-tags__text text-center">
    	{%- if block.settings.link != blank -%}
      	<a href="{{ block.settings.link }}"  style="color: {{ section.settings.text_color }}; background-color: {{ section.settings.bg_color }};">{{ block.settings.tag }}</a>
      	{%- else -%}
      	<p style="color: {{ section.settings.text_color }}; background-color: {{ section.settings.bg_color }};">{{ block.settings.tag }}</p>
      	{%- endif -%}
    </li>
  {%- endfor -%}
  </ul>
</div>
{% if section.settings.space_around %}</div>{% endif %}

{% schema %}
  {
    "name": "Campaign Tags",
	"settings": [
      {
        "type": "checkbox",
        "id": "space_around",
        "label": "Add spacing above and below",
        "default": false
      },
	  {
        "type": "color",
        "id": "bg_color",
        "label": "Background",
        "default": "#f9efe7"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text"
      }
    ],
    "blocks" : [ 
      {
		"name": "Tag",
		"type": "tag",
        "settings": [
          {
            "type": "text",
            "id": "tag",
            "label": "Tag"
          },
		  {
            "type": "text",
            "id": "link",
            "label": "Link"
          }
		]
	  }
    ],
    "presets": [
        {
          "name": "Campaign Tags"
        }
      ]
  }
{% endschema %}