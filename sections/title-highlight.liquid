{%- if section.settings.space_top -%}<hr class="hr--clear hr--medium">{%- endif -%}
{%- if section.settings.space_around -%}<div class="index-section">{%- endif -%}
<div class="section-header text-center title-highlight-header">
  <div class="larger-text title-highlight" {% if section.settings.color_border != blank %}style="border-color: {{ section.settings.color_border }}"{% endif %}>
    <span class="title-highlight-content">
    {{ section.settings.title }}
    </span>
  </div>
</div>
{%- if section.settings.space_around -%}</div>{%- endif -%}
{% schema %}
  {
    "name": "Title Highlight",
	"class": "title-highlight--container",
    "settings": [
		{
          "type": "checkbox",
          "id": "space_around",
          "label": "Add spacing above and below",
          "default": true
        },
		{
          "type": "checkbox",
          "id": "space_top",
          "label": "Add extra spacing on top",
          "default": false
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
		  "info": "Use class title-highlight-focus for circled text."
        },
		{
          "type": "color",
          "id": "color_border",
          "label": "Border  Color",
          "default": "#000"
        }
	],
    "presets": [{
      "name": "Title Highlight"
    }]
  }
{% endschema %}