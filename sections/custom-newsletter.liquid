{% if section.settings.space_around %}<div class="index-section">{% endif %}
<div style="background: {{ section.settings.bg_color }}" class="custom-newsletter__wrapper">
  <div class="custom-newsletter page-width">
    <div class="custom-newsletter__content custom-newsletter-text">
      <h1 class="custom-newsletter__title">{{ section.settings.title }}</h1>
      {{ section.settings.subtitle }}
    </div>

    <div class="custom-newsletter__content custom-newsletter-form">
      {%- render 'newsletter-form', section_id: section.id, snippet_context: 'section' -%}
    </div>
  </div>
</div>
{%- if section.settings.space_around -%}</div>{%- endif -%}
{% schema %}
  {
    "name": "Custom Newsletter",
    "settings": [
		{
          "type": "checkbox",
          "id": "space_around",
          "label": "Add spacing above and below",
          "default": true
        },
		{
          "type": "color",
          "id": "bg_color",
          "label": "Background",
          "default": "#F9EFE7"
        },
		{
		  "type": "text",
          "id": "title",
          "label": "Title"
		},
		{
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        }
	],
    "presets": [{
      "name": "Custom Newsletter"
    }]
  }
{% endschema %}