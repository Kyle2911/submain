{%- style -%}
.stores-list--{{ section.id }} .custom-collapsible-block .collapsibles-wrapper {
	border-color: {{ section.settings.color }};
}

.stores-list--{{ section.id }} .custom-collapsible-block .collapsible-trigger-btn,
.stores-list--{{ section.id }} p {
	color: {{ section.settings.color }};
}
{%- endstyle -%}

<div class="page-width stores-list--{{ section.id }} {% if section.settings.space_around %}index-section{% endif %}">
  	<p class="h4 text-center">{{ section.settings.title }}</p>
	{%- for block in section.blocks -%}
    <div class="custom-collapsible-block custom-collapsible-block--tab" {{ block.shopify_attributes }}>
      {%- render 'custom-tab', block: block -%}
    </div>
  	{%- endfor -%}
</div>

{% schema %}
  {
    "name": "Stores List",
    "settings": [
      {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
      {
            "type": "checkbox",
            "id": "space_around",
            "label": "Add spacing above and below",
            "default": true
          },
      {
            "type": "color",
            "id": "color",
            "label": "Color",
            "default": "#FFF"
          }
    ],
    "blocks": [
      {
        "type": "store_availability",
        "name": "Store Availability",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "text",
            "id": "phone_number",
            "label": "Phone Number"
          },
          {
            "type": "textarea",
            "id": "address",
            "label": "Address"
          },
          {
            "type": "text",
            "id": "longitude",
            "label": "Longitude",
            "placeholder": "180.0000000"
          },
          {
            "type": "text",
            "id": "latitude",
            "label": "Latitude",
            "placeholder": "90.0000000"
          },
          {
            "type": "text",
            "id": "seo_title",
            "label": "Seo Title"
          },
          {
            "type": "text",
            "id": "seo_text",
            "label": "Seo Text"
          },
          {
            "type": "textarea",
            "id": "opening_hour",
            "label": "Opening hour",
            "info": "Comma then space separated",
            "placeholder": "10:00AM - 7:00PM, 9:00AM - 7:00PM"
          },
          {
            "type": "image_picker",
            "id": "image_1",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "image_2",
            "label": "Image 2"
          },
          {
            "type": "image_picker",
            "id": "image_3",
            "label": "Image 3"
          }
        ]
      }
    ],
    "presets": [
        {
          "name": "Stores List"
        }
    ]
  }
{% endschema %}
