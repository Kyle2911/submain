{%- liquid
	assign display_badge = false
    assign display_border = false

    comment
	if product.tags contains 'violator--bsblack'
		assign img_url = 'violator-bs-black.png' | file_img_url: '1x1'  | replace: '_1x1.', '_{width}x.'
        assign display_badge = true
    elsif product.tags contains 'violator--nif'
    	assign img_url = 'violator_nif.png' | file_img_url: '1x1'  | replace: '_1x1.', '_{width}x.'
        assign display_badge = true
    elsif product.tags contains 'violator--bswhite'
    	assign img_url = 'violator-bswhite.png' | file_img_url: '1x1'  | replace: '_1x1.', '_{width}x.'
        assign display_badge = true
    endif
    endcomment
    
    if handle == 'the-crew-collection'
      if product.tags contains 'border-pink'
          assign border_url = 'BORDERS-01_1.png' | file_img_url: '1x1'  | replace: '_1x1.', '_{width}x.'
          assign display_border = true
      elsif product.tags contains 'border-green'
          assign border_url = 'BORDERS-02_1.png' | file_img_url: '1x1'  | replace: '_1x1.', '_{width}x.'
          assign display_border = true
      elsif product.tags contains 'border-blue'
          assign border_url = 'BORDERS-03_1.png' | file_img_url: '1x1'  | replace: '_1x1.', '_{width}x.'
          assign display_border = true
      elsif product.tags contains 'border-yellow'
          assign border_url = 'BORDERS-04_1.png' | file_img_url: '1x1'  | replace: '_1x1.', '_{width}x.'
          assign display_border = true
      endif
    endif
-%}

{%- if handle == 'the-crew-collection' -%}
{%- style -%}
.custom-badge {
  bottom: 10px;
  z-index:  0;
}

.grid-product__tag {
  z-index: 2;
}
{%- endstyle -%}
{%- endif -%}

{%- if display_badge -%}
<div class="badge-container">
  <img class="lazyload"
       data-src="{{ img_url }}"
       data-widths="[50, 70]"
       data-sizes="auto">
</div>
{%- endif -%}

{%- if display_border -%}
<div class="border-container">
  <img class="lazyload"
       data-src="{{ border_url }}"
       data-widths="[390]"
       data-sizes="auto">
</div>
{%- endif -%}