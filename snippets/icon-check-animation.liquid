
 
 <style>
   /* mobile */
  @media only screen and (min-width: 200px) {
 #animation{
       display: flex;
    margin-left: 5%;
 }
}
/* desktop */
@media only screen and (min-width: 992px) {
 #animation{
       display: flex;
    margin-left: 36%;
 }
}
#animation{
  position: relative;
  height: 250px;
  width: 250px;
  display: inline-block;
  border: 12px solid rgba(255,255,255,0.2);
  border-radius: 50%;
  border-left-color: #5cb85c;
  animation: rotate 1.2s linear infinite;
}
@keyframes rotate {
  50%{
    border-left-color: #5cb85c;
  }
  75%{
    border-left-color: #5cb85c;
  }
  100%{
    transform: rotate(360deg);
  }
}
#animation .check-icon{
  display: none;
}
#animation .check-icon:after{
  position: absolute;
  content: "";
  top: 50%;
  left: 27%;
  transform: scaleX(-1) rotate(135deg);
  height: 131px;
  width: 50px;
  border-top: 12px solid #5cb85c;
  border-right: 12px solid #5cb85c;
  transform-origin: left top;
  animation: check-icon 0.8s ease;
}
@keyframes check-icon {
  0%{
    height: 0;
    width: 0;
    opacity: 1;
  }
  20%{
    height: 0;
    width: 50px;
    opacity: 1;
  }
  40%{
    height: 131px;
    width: 50px;
    opacity: 1;
  }
  100%{
    height: 131px;
    width: 50px;
    opacity: 1;
  }
}

input:checked ~ #animation .check-icon{
  display: block;
}
input:checked ~ #animation{
  animation: none;
  border-color: #5cb85c;
  transition: border 0.5s ease-out;
}
      </style>
