<div class="page-width page-content">
  <div class="grid">

    <div class="register-grid-item grid__item medium-up--one-third medium-up--push-one-third">

      <header class="section-header">
        <h1 class="section-header__title">{{ 'customer.register.title' | t }}</h1>
      </header>

      <div class="form-vertical register-form">
        {% form 'create_customer' %}

          {{ form.errors | default_errors }}

          <label for="FirstName">{{ 'customer.register.first_name' | t }}</label>
          <input required type="text" name="customer[first_name]" id="FirstName" class="input-full input-text" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>

          <label for="LastName">{{ 'customer.register.last_name' | t }}</label>
          <input required type="text" name="customer[last_name]" id="LastName" class="input-full input-text" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">

          <label for="Email">{{ 'customer.register.email' | t }}</label>
          <input required type="email" name="customer[email]" id="Email" class="input-full input-text {% if form.errors contains 'email' %} error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

          <label for="CreatePassword">{{ 'customer.register.password' | t }}</label>
          <input required type="password" name="customer[password]" id="CreatePassword" class="input-full input-text {% if form.errors contains 'password' %} error{% endif %}" >

          <label for="MobileNumber">{{ 'customer.register.mobile_number' | t }}</label>
          <input required placeholder="{{ 'customer.register.mobile_number_placeholder' | t }}" maxlength="11" type="number" maxlength="11"  name="customer[note][mobile_number]" id="MobileNumber" class="input-full input-text {% if form.errors contains 'mobile_number' %} error{% endif %}" onKeyPress="if(this.value.length==11) return false;">

          <label for="Birthday">{{ 'customer.register.birthday' | t }}</label>
          <input required placeholder="{{ 'customer.register.birthday_placeholder' | t }}" type="text" name="customer[note][birthday]" id="Birthday" class="input-full input-text {% if form.errors contains 'birthday' %} error{% endif %}">

          <label for="Gender">{{ 'customer.register.gender' | t }}</label>
          <div class="radio-group">
            <div class="radio-wrapper">
              <div class="radio__input">
                <input type="radio" class="input-radio" checked="checked" name="customer[note][gender]" value="{{ 'customer.register.male' | t }}" id="CustomerGender1" />
              </div>
              <label for="CustomerGender1" class="radio__label">{{ 'customer.register.male' | t }}</label>
            </div>
            <div class="radio-wrapper">
              <div class="radio__input">
                <input type="radio" class="input-radio" checked="checked" name="customer[note][gender]" value="{{ 'customer.register.female' | t }}" id="CustomerGender2" />
              </div>
              <label for="CustomerGender2" class="radio__label">{{ 'customer.register.female' | t }}</label>
            </div>
            <div class="radio-wrapper">
              <div class="radio__input">
                <input type="radio" class="input-radio" checked="checked" name="customer[note][gender]" value="{{ 'customer.register.prefer_not_to_say' | t }}" id="CustomerGender3" />
              </div>
              <label for="CustomerGender3" class="radio__label">{{ 'customer.register.prefer_not_to_say' | t }}</label>
            </div>
          </div>

          <label for="CustomerIgHandle">{{ 'customer.register.ig_handle' | t }}</label>
          <input type="text" name="customer[note][ig_handle]" id="CustomerIgHandle" class="input-full input-text" placeholder="{{ 'customer.register.ig_handle_placeholder' | t }}" autocorrect="off" autocapitalize="off">

          <div class="checkbox-wrapper checkbox-wrapper-term">
            <div class="checkbox__input">
              <input type="checkbox" id="CustomerTermsAndConditionsAcceptance" class="input-checkbox term__checkbox" name="customer[note][terms_acceptance]"/>
            </div>
            <label class="checkbox__label checkbox__label__custom" for="CustomerTermsAndConditionsAcceptance">
              {{ 'customer.register.terms_and_conditions_html' | t: url: '#', url2: '#' }}
            </label>
          </div>

          <p>
            <button type="button" title="{{ 'customer.register.submit' | t }}" class="btn btn--full" data-button-submit>
              {{ 'customer.register.submit' | t }}
            </button>
          </p>
        {% endform %}
      </div>
    </div>
  </div>
</div>